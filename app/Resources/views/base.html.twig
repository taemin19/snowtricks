<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}SnowTricks{% endblock %}</title>

        {% block stylesheets %}
            {# Bootstrap CSS #}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
            {# Fonts #}
            <script src="https://use.fontawesome.com/a8f06cd6dd.js"></script>
            <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light+Two" rel="stylesheet">
        {% endblock %}

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block header %}
            <header>
                <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
                    <div class="container">
                        <a class="navbar-brand text-uppercase mr-auto" href="{{ path('community_index') }}">
                            <img src="{{ asset('logo/st-logo.png') }}" class="rounded d-inline-block align-top" alt="Logo SnowTricks">
                            SnowTricks
                        </a>

                        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse justify-content-end" id="navbarNav">
                            <ul class="navbar-nav align-items-center">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('community_index') }}">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Sign Up</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <footer class="bg-dark py-4">
                <div class="container">
                    <div class="row py-4">
                        <div class="col-12 col-sm-8 text-center text-sm-left pb-4">
                            <a class="navbar-brand text-white text-uppercase mr-auto pb-4" href="{{ path('community_index') }}">
                                <img src="{{ asset('logo/st-logo.png') }}" class="rounded d-inline-block align-top" alt="Logo SnowTricks">
                                SnowTricks
                            </a>
                            <nav class="nav flex-column flex-sm-row">
                                <a href="{{ path('community_index') }}" class="nav-link text-white pl-sm-0">Home</a>
                                <a href="#" class="nav-link text-white">Sign In</a>
                                <a href="#" class="nav-link text-white">Sign Up</a>
                            </nav>
                        </div>
                        <div class="col">
                            <nav class="nav justify-content-center">
                                <a href="#" class="nav-link text-white pr-1"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a>
                                <a href="#" class="nav-link text-white pr-1"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>
                                <a href="#" class="nav-link text-white pr-1"><i class="fa fa-youtube fa-2x" aria-hidden="true"></i></a>
                            </nav>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col text-center">
                            <span class="text-muted">Copyright Â© 2017 SnowTricks</span>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            {# jQuery / Bootstrap JS #}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
